<resources>
    <!-- Base application theme. -->
    <style name="Theme.GiphySearcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ErrorButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>



    <style name="MyBigText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MySmallText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/small_text_white</item>
    </style>

    <style name="MyVerySmallText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/small_text_white</item>
    </style>
</resources>